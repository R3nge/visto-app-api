{
  "include": [
    "./src/**/*",
    "src/**/*",
    "types/**/*",
    "src/index.tsx",
    "src/App.tsx",
    "src/react-navigation.d.tsd.ts"
  ],
  "exclude": ["node_modules/**"],
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "rootDir": "./src",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "ts-node": {
    "files": true
  }
}
